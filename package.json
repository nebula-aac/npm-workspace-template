{
  "name": "npm-workspace-template",
  "version": "0.0.0",
  "private": true,
  "description": "NPM Workspace template",
  "license": "MIT",
  "author": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "commit": "git-cz",
    "commit:noverify": "git-cz --no-verify",
    "commit:sign": "git-cz -S",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-emoji": "^1.3.2-canary.2"
  }
}
